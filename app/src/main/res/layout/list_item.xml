<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/item_user_avatar"
        android:id="@+id/linearLayout"
        >

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/item_user_avatar"
            android:contentDescription="@string/user_avater"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@color/bright_foreground_material_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Biousco"
            android:id="@+id/item_user"
            android:layout_marginTop="2px"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_marginLeft="30px"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="什么东西最值钱？"
            android:id="@+id/item_title"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_user_avatar"
            android:textSize="42px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="这文章好就好在不下大棋，不像无脑国家（民族）主义者那样默认国家是铁板一块.有很多你没想到的事：剁手党增速最快的地方，是玉树、山南这样的四五线县市；网店和实体店不是对手是兄弟"
            android:id="@+id/item_content_brief"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:textSize="36px"
            android:maxLines="3" />
    </LinearLayout>

</RelativeLayout>